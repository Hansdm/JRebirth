<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>

	<id>package-all</id>

	<formats>
		<format>zip</format>
		<format>tar.gz</format>
		<format>tar.bz2</format>
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>JRebirth-${project.version}</baseDirectory>

	<!-- Analyzer Tool -->
	<fileSets>
		<fileSet>
			<directory>../analyzer/target/jnlp</directory>
			<outputDirectory>/Analyzer</outputDirectory>
		</fileSet>
	</fileSets>

	<dependencySets>

		<!-- Binaries -->
		<dependencySet>
			<includes>
				<include>org.jrebirth:*:jar</include>
			</includes>
			<excludes>
				<exclude>*:javadoc</exclude>
				<exclude>*:sources</exclude>
				<exclude>*:site</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
			<outputFileNameMapping>${artifact.groupId}.${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<unpack>false</unpack>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
			<useStrictFiltering>true</useStrictFiltering>
		</dependencySet>
		
		<!-- Libs -->
		<dependencySet>
			<includes>
				<include>*:jar</include>
			</includes>
			<excludes>
				<exclude>org.jrebirth:*:jar</exclude>
			</excludes>
			<outputDirectory>libs/</outputDirectory>
			<outputFileNameMapping>${artifact.groupId}.${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<unpack>false</unpack>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
			<useStrictFiltering>true</useStrictFiltering>
		</dependencySet>
		
		<!-- Javadoc -->
		<dependencySet>
			<includes>
				<include>*:javadoc</include>
			</includes>
			<outputDirectory>apidocs/${artifact.artifactId}</outputDirectory>
			<unpack>true</unpack>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
			<useStrictFiltering>true</useStrictFiltering>
		</dependencySet>

		<!-- Sources -->
		<dependencySet>
			<includes>
				<include>*:sources</include>
			</includes>
			<outputDirectory>source/${artifact.artifactId}</outputDirectory>
			<unpack>true</unpack>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
			<useStrictFiltering>true</useStrictFiltering>
		</dependencySet>

		<!-- Root Site -->
		<dependencySet>
			<includes>
				<include>org:jrebirth:*:site</include>
			</includes>
			<outputDirectory>site/</outputDirectory>
			<unpack>true</unpack>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
			<useStrictFiltering>true</useStrictFiltering>
		</dependencySet>

		<!-- Site -->
		<dependencySet>
			<includes>
				<include>*:site</include>
			</includes>
			<excludes>
				<exclude>org:jrebirth:*:site</exclude>
			</excludes>
			<outputDirectory>site/${artifact.artifactId}</outputDirectory>
			<unpack>true</unpack>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useProjectArtifact>true</useProjectArtifact>
			<useStrictFiltering>true</useStrictFiltering>
		</dependencySet>

	</dependencySets>

</assembly>